class Config:
    # 文件路径配置

    # 打铃计划文件（绝对路径，UTF-8编码，多行CSV，24小时制时间，每行格式：HH:mm:ss,音频文件名,描述）
    SCHEDULE_FILE_PATH = "/path/to/schedule.csv"

    # 特殊打铃日期文件（绝对路径，UTF-8编码，单行CSV，优先级高于特殊不打铃日期，格式：yyyy-MM-dd,...）
    RING_DATES_FILE_PATH = "/path/to/ring_dates.csv"

    # 特殊不打铃日期文件（绝对路径，UTF-8编码，单行CSV，优先级低于特殊打铃日期，格式：yyyy-MM-dd,...）
    NO_RING_DATES_FILE_PATH = "/path/to/no_ring_dates.csv"

    # 音频文件目录（绝对路径，不递归子目录）
    AUDIO_FILES_DIRECTORY = "/path/to/audio"

    # 日志文件目录（绝对路径，如不存在将自动创建）
    LOG_DIRECTORY = "/path/to/logs"

    # 时间配置

    # 打铃时间容差（±,秒）
    TIME_TOLERANCE = 1.0
    # 轮询间隔（秒）
    POLLING_INTERVAL = 0.6
    # 建议保持：POLLING_INTERVAL < TIME_TOLERANCE

    # 每日任务刷新时间（24小时制）
    TASK_REFRESH_TIME = "04:00:00"
    # 任务加载模式：True=加载明天任务，False=加载今天任务
    LOAD_TASKS_FOR_TOMORROW = False
    # 任务刷新时间需要在所有打铃任务时间之前或之后，如果是在之前，
    # 则应将任务加载模式设置为加载今天任务（False），否则应加载明天任务（True）

    # 音频播放配置

    # 音频文件路径占位符
    AUDIO_PATH_PLACEHOLDER = "<audio_path>"

    # 播放命令
    RING_COMMAND_LIST = [
        "ffplay",
        "-nodisp",
        "-autoexit",
        "-loglevel",
        "quiet",
        AUDIO_PATH_PLACEHOLDER,
    ]
